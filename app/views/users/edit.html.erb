<h1>Edit Account:</h1>

<%= form_tag "/users/#{@user.id}", method: :patch do %>
  <h4>name:</h4><input type="text" name="name" value="<%= @user.name %>">
  <h4>email:</h4><input type="email" name="email" value="<%= @user.email %>">
  <h4>Your current latitude:</h4><input type="text" name="lat" value="<%= @user.lat %>">
  <h4>Your current longitude:</h4><input type="text" name="long" value="<%= @user.long %>">
  <h4>Password:</h4><input type="password" name="password">
  <h4>Confirm Password:</h4><input type="password" name="password_confirmation">
  <input type="submit" value="Submit">
<% end %>
