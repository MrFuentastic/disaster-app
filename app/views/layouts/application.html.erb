<!DOCTYPE html>
<html>
  <head>
    <title>DisasterApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <a href="/"><h2>Home</h2></a>
    <a href="/safe_locations/?emergency_cat=7">Tornado Safe Locations</a>
    <a href="/safe_locations/?dist=true"><h6>Sort by distance</h6></a>
    
    <h5><%= current_user && current_user.email %></h5>
    <% if current_user %>
      <a href="/users/<%= current_user.id %>">Your Account</a>
      <%= link_to "Logout", "/logout", method: :delete %>
    <% else %>
      <a href="/login">Login</a>
      <a href="/signup">Create an Account</a>
    <% end %>
  
    
    <%= yield %>
  </body>
</html>
